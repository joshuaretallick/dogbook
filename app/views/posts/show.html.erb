<div class="row">
  <div class="col-md-3">
    <p><b>Bark: </b><%= simple_format @post.description %></p>
    <p>
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Chew', @post, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to 'Back', posts_path %>
    </p>
  </div>

  <div class="col-md-9">
    <%= image_tag(@post.picture_url, width: '70%') if @post.picture.present? %>
    <p>Comments</p>
    <% @comments.each do |comment| %>
      <div>
        <br>
        <p><%= comment.body %></p>
        Posted by <%= comment.user.name %>
        <p><%= link_to 'Edit comment', comment_path(comment) %></p>
        <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
    <% pre_like = @post.likes.find { |like| like.user_id == current_user.id} %>
    <% if pre_like %>
      <%= button_to 'Unlick', post_like_path(@post, pre_like), method: :delete %>
    <% else %>
      <%= button_to 'Lick', post_likes_path(@post), method: :post %>
    <% end %>
    <p><%= @post.likes.count %> <%= (@post.likes.count) == 1 ? 'Lick' : 'Licks'%></p>
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>
</div>
