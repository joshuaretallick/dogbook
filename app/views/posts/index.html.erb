<h1>Feed</h1>

<% @posts.in_groups_of(1) do |group| %>
  <div class="row">
    <% group.compact.each do |post| %>
      <div class="col-md-4">
        <%= image_tag post.picture_url(:thumb) if post.picture.present? %>
        <h4><%= link_to post.description, post %></h4>Posted by <%= post.user.name %>
      </div>
    <% end %>
  </div>
<% end %>
