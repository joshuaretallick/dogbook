<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>ğŸŒ³ Park ğŸŒ³</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <h2>Barks</h2>
    </div>
  </div>
  <% @posts.in_groups_of(1) do |group| %>
  <div class="row">
    <% group.compact.each do |post| %>
      <div class="col-md-6">
        <%= image_tag post.picture_url, width: '20%' if post.picture.present? %>
        <h5><%= simple_format link_to post.description, post %></h5>
        Posted by <%= post.user.name %> at
        <%= post.created_at.strftime("%k:%M, #{post.created_at.day.ordinalize} %B %Y") %>
        <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Lick' : 'Licks'%></p>
      </div>
    <% end %>
  </div>
<% end %>
</div>
